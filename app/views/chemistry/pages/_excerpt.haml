- excerpt ||= nil
- page ||= excerpt || @page

%li.page
  %a.page{href: page.path}
    %span.detail
      %span.title
        = page.title
      %date
        = l(page.date.presence || page.published_at, format: :natural)
      %span.summary
        = truncate strip_tags(page.summary.presence || page.excerpt), length: 256