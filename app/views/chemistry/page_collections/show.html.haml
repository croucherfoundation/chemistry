- content_for :body_class do
  = "features"

- content_for :title do
  = strip_tags(@page_collection.short_title)

#cms_illustration
  .features_grid.infinite.irregular{data: {url: chemistry.page_collection_features_url(@page_collection.slug)}}
    = render partial: "chemistry/pages/feature", collection: @pages, locals: {omit_collection: true}
    .waiter
      .spinner

#cms_body
  #cms_title
    %h1.pagetitle
      = @page_collection.title

  #standfirst
    = sanitize(@page_collection.introduction)

    %p
      %a{href: chemistry.page_collection_archive_url(@page_collection.slug)}
        %svg.icon
          %use{href: "#search_symbol"}
        = @page_collection.short_title
        archive and search

#buttons{data: {collection: @page_collection.slug}}
