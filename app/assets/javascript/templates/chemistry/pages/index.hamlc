%h1.pagetitle
  = t('headings.pages')

%ul.pages
  %a.new.page{href: "/pages/edit/new"}
    %h2.page
      %svg.page
        %use{"xlink:href" => "#new_page_symbol"}
      %span.detail
        %span.heading
          = t('pages.new_title')
        %span.description
          = t('pages.new_description')

#pages

#page_help
  %p
    = t('introductions.chemistry')
    %span.no_pages
      = t('introductions.to_begin')
    = t('introductions.safe_until_published')
  %p
    = t('introductions.template_explanation')
    %a{href: "/templates"}
      = t('links.templates')
    = t('and')
    %a.fullstop{href: "/section_types"}<
      = t('links.section_types')
  %p
    For more navigation, tap the
    %svg.inline
      %use{"xlink:href" => "#flask_symbol"}
    menu icon at top left.

